<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.workouts.WorkoutsFragment"
    android:background="@drawable/img_background">

    <include layout="@layout/topbar"
        android:id="@+id/topBar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_marginBottom="100dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_Home_Workouts"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <ImageView
                    android:id="@+id/imgHomeWorkouts"
                    android:layout_width="311.1dp"
                    android:layout_height="175dp"
                    android:layout_gravity="center"
                    android:onClick="goToGymWorkouts"
                    android:scaleX="1.35"
                    android:scaleY="1.35"
                    android:src="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:text="HOME"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/black"
                    android:layout_gravity="center_vertical|right"/>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Rvhome_workouts"
                class="androidx.appcompat.app.AlertController$RecycleListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView_Home_Workouts"
                android:layout_marginTop="10dp"
                android:paddingLeft="0dp">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:id="@+id/viewSeparator2"
                android:layout_width="275dp"
                android:layout_height="0.2dp"
                android:layout_below="@id/Rvhome_workouts"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="20dp"
                android:background="@color/light_grey"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_Gym_Workouts"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/viewSeparator2"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <ImageView
                    android:id="@+id/imgGymWorkouts"
                    android:layout_width="311.1dp"
                    android:layout_height="175dp"
                    android:layout_gravity="center"
                    android:onClick="goToGymWorkouts"
                    android:scaleX="1.35"
                    android:scaleY="1.35"
                    android:src="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="GYM"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/black"
                    android:layout_gravity="center_vertical|right"/>


            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RvGym_workouts2"
                class="androidx.appcompat.app.AlertController$RecycleListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView_Gym_Workouts"
                android:layout_marginTop="10dp"
                android:paddingLeft="0dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>