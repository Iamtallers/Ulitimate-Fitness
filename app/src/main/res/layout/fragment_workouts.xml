<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.workouts.WorkoutsFragment"
    android:background="@drawable/img_background">

    <include layout="@layout/topbar"
        android:id="@+id/topBar"/>

    <TextView
        android:id="@+id/txtHome_Workouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_marginTop="10dp"
        android:fontFamily="Times New Roman"
        android:padding="10dp"
        android:paddingLeft="20dp"
        android:text="Home Workouts"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rvhome_workouts"
        android:layout_below="@id/txtHome_Workouts"
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/viewSeparator2"
        android:layout_width= "275dp"
        android:layout_height="0.2dp"
        android:layout_below="@id/Rvhome_workouts"
        android:background="@color/light_grey"
        android:layout_centerHorizontal="true"
        android:paddingRight="15dp"
        android:layout_marginVertical="20dp"
        android:paddingLeft="15dp"/>




        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_Gym_Workouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_below="@id/viewSeparator2"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imgGymWorkouts"
                android:onClick="goToGymWorkouts"
                android:layout_width="311.1dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:src="@drawable/img_gym_workouts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GYM WORKOUTS"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

</RelativeLayout>